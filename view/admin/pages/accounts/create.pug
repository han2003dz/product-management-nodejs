extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/status.pug
block main
  h1(class="mb-4") Thêm mới tài khoản
  form(
    action=`${prefixAdmin}/accounts/create`
    method="POST"
    enctype="multipart/form-data"
  )
    .row
      .col-5
        div(class="form-group")
          label(for="fullName" class="form-label") Họ tên *
          input(
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            required
          )
        if roles
          div(class="form-group my-2")
            label(for="role_id" class="form-label") Phân quyền *
            select(name="role_id" id="role_id" class="form-control form-select")
              option(disabled) -- Chọn quyền --
              each item in roles
                option(value=item.id) #{item.title}
        .row
          .form-group.mb-2(upload-image)
            label(for="avatar" class="form-label") Hình ảnh
            input.form-control(
              type="file"
              class="form-control-file"
              id="avatar"
              name="avatar"
              accept="image/*"
              upload-image-input
            )
            img(
              src=""
              upload-image-preview
              class="img-thumbnail"
            )
        
      .col-5
        div(class="form-group")
          label(for="email" class="form-label") Email *
          input(
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          )
        div(class="form-group my-2")
          label(for="password" class="form-label") Mật khẩu *
          input(
            type="password"
            class="form-control"
            id="password"
            name="password"
            required
          )
        div(class="form-group")
          label(for="phone" class="form-label") Số điện thoại
          input(
            type="text"
            class="form-control"
            id="phone"
            name="phone"
          )
        +status()
        div(class="form-group")
          button(
            type="submit"
            class="btn btn-primary"
          ) Tạo mới
    
