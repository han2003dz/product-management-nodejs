extends ../../layouts/default.pug
block main
  h1 Thêm quyền mới
  form(
    action=`${prefixAdmin}/roles/create`
    method="POST"
  )
    .col-7
      .row
        .form-group.mb-2
          label(for="title" class="form-label") Tên quyền *
          input(
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          )
      .row
        .col-3
          span Trạng thái:
        .col-4
          .form-group.form-check.form-check-inline.mb-2
            input(
              type="radio"
              class="form-check-input"
              id="statusActive"
              name="status"
              value="active"
              checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        .col-5
          .form-group.form-check.form-check-inline.mb-2
            input(
              type="radio"
              class="form-check-input"
              id="statusInActive"
              name="status"
              value="inactive"
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động 
      .row
        .form-group.mb-2
          label(for="desc" class="form-label") Mô tả
          textarea.form-control.textarea-mce(
            id="desc"
            name="description"
            rows="4"
          )
      .row
        .form-group
          button(
            type="submit"
            class="btn btn-primary"
          ) + Thêm mới